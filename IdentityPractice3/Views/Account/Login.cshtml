@model IdentityPractice3.Models.DTOs.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                <h4>@ViewBag.Message</h4>
            </div>
        }
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsPersistent" class="control-label"></label>
                <input asp-for="IsPersistent" class="form-control" />
                <span asp-validation-for="IsPersistent" class="text-danger"></span>
            </div>

            <input asp-for="ReturnUrl" type="hidden" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <br />
            <div>
               
                <div class="g-recaptcha" data-sitekey="6LflAu8pAAAAAMl2eI-PGZzggibqETh_Itn456Zz">
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="ExternalLogin">
        ورود با حساب گوگل
    </a>
    <br />
   
</div>
<script src="https://google.com/recaptcha/api.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
